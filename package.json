{
  "name": "cnc-mbl",
  "displayName": "cnc-mbl",
  "description": "VSC Erweiterung fÃ¼r Sinumerik Dateien.",
  "version": "0.0.4",
  "publisher": "sshDevelopmentUG",
	"author": {
		"name": "Andreas Herderich",
		"email": "a.herderich@sshdev.de",
		"url": "https://sshdev.de"
	},
  "icon": "favicon.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onEditSession:file"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cnc-mbl.activate",
        "title": "Sinumerik aktivieren"
      },
      {
        "command": "cnc-mbl.number",
        "title": "Satznummerierung"
      },
      {
        "command": "cnc-mbl.hc0",
        "title": "WKS -> MKS C0"
      },
      {
        "command": "cnc-mbl.hc90",
        "title": "WKS -> MKS C90"
      },
      {
        "command": "cnc-mbl.hc180",
        "title": "WKS -> MKS C180"
      },
      {
        "command": "cnc-mbl.hc270",
        "title": "WKS -> MKS C270"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cnc-mbl.activate",
          "when":"editorLangId != sinumerik"
        },
        {
          "command": "cnc-mbl.number"
        },
        {
          "command": "cnc-mbl.hc0",
          "when": "editorHasSelection"
        },
        {
          "command": "cnc-mbl.hc90",
          "when": "editorHasSelection"
        },
        {
          "command": "cnc-mbl.hc180",
          "when": "editorHasSelection"
        },
        {
          "command": "cnc-mbl.hc270",
          "when": "editorHasSelection"
        }
      ]
    },
    "languages": [
			{
				"id": "sinumerik",
				"aliases": [
					"Sinumerik"
				],
				"extensions": [
					""
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "sinumerik",
				"scopeName": "source.sinumerik",
				"path": "./syntaxes/sinumerik.tmLanguage.json"
			}
		]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}